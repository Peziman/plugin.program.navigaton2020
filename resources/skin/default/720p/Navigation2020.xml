		    <control type="image">
			    <description>Back Button Image</description>
			    <posx>8</posx>
			    <posy>8</posy>
			    <width>64</width>
			    <height>64</height>
			    <texture>radio_icon_back_w.png</texture>
		    </control>
	    </control>
	</controls>
</window>

